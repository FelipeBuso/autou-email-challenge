{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/api/main.py" },
    { "src": "/(.*)", "dest": "apps/web/$1" }
  ]
}
